alias ls='ls --color=auto'
alias le='less /var/log/apache2/error.log'
alias la='less /var/log/apache2/access.log'
alias te='tail -f /var/log/apache2/error.log'
alias ta='tail -f /var/log/apache2/access.log'
alias tm='tail -f /var/log/mail.log'
alias ts='tail -f /var/log/syslog'
alias ack='ack-grep'

alias vless='/usr/share/vim/vim72/macros/less.sh'

if [ "$TERM" -a "x$TERM" != "xdumb" ]; then
  stty -ixon # i want my ctrl-s for other things
fi
