#!/bin/sh

if [ -f "/tmp/rsync-seedbox-hourly.lock" ]; then
  exit 0;
fi

touch "/tmp/rsync-seedbox-hourly.lock"
/usr/syno/bin/rsync --quiet --rsh 'ssh -q -i /var/services/homes/danial/.ssh/id_rsa -F /var/services/homes/danial/.ssh/config' --inplace --recursive --timeout 360 danial@tigris.id.au:/home/danial/sync/hourly/ /volume1/incoming/torrents/ > /dev/null
find /incoming/torrents/ -type f -exec chmod 664 {} \;
find /incoming/torrents/ -type d -exec chmod 775 {} \;
find /incoming/torrents/ -type f -exec chown danial.users {} \;
find /incoming/torrents/ -type d -exec chown danial.users {} \;
rm "/tmp/rsync-seedbox-hourly.lock"

exit 0;
